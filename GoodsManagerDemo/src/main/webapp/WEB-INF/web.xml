<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
    <display-name>GoodsManagerDemo</display-name>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>
    
    <filter>
        <filter-name>login</filter-name>
        <filter-class>com.taobao.open.javaDemo.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>ShowTradeServlet</servlet-name>
        <servlet-class>com.taobao.open.javaDemo.ShowTradeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowTradeServlet</servlet-name>
        <url-pattern>/center.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SendServlet</servlet-name>
        <servlet-class>com.taobao.open.javaDemo.SendServlet</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>SendServlet</servlet-name>
        <url-pattern>/send.do</url-pattern>
    </servlet-mapping>

    <servlet>        
        <display-name>AreaAsynchServlet</display-name>
        <servlet-name>AreaAsynchServlet</servlet-name>
        <servlet-class>com.taobao.open.javaDemo.AreaAsynchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AreaAsynchServlet</servlet-name>
        <url-pattern>/area.do</url-pattern>
    </servlet-mapping>
</web-app>